<UserControl x:Class="AutoMerge.BranchesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:autoMerge="clr-namespace:AutoMerge;assembly="
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             TextOptions.TextFormattingMode="Display"
             UseLayoutRounding="True"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Base/VsListBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <autoMerge:BranchNameConverter x:Key="BranchNameConverter" />
            <autoMerge:ValidationResultToEnableConverter x:Key="ValidationResultToEnableConverter" />
            <autoMerge:ValidationResultToTextConverter x:Key="ValidationResultToTextConverter" />
            <autoMerge:ValidationResultToVisibilityConverter x:Key="ValidationResultToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <DataTemplate x:Key="BranchItemTemplate" DataType="autoMerge:MergeInfoViewModel">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0,0,6,0"
                           Source="../Images/warning_12x12.png"
                           ToolTip="{Binding ValidationResult,
                                             Converter={StaticResource ValidationResultToTextConverter}}"
                           Visibility="{Binding ImageVisibility}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <Trigger Property="ToolTip" Value="{x:Null}">
                                        <Setter Property="ToolTipService.IsEnabled" Value="False" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <CheckBox Margin="0,0,5,0"
                              IsChecked="{Binding Checked,
                                                  Mode=TwoWay}"
                              IsThreeState="False"
                              Visibility="{Binding GetCheckBoxVisibility}" />
                    <TextBlock Margin="0,0,0,0" Text="{Binding TargetBranch, Converter={StaticResource BranchNameConverter}}" />
                </StackPanel>
            </DataTemplate>

            <Style x:Key="BranchesListBoxItemStyle"
                   BasedOn="{StaticResource VsListBoxItemStyle}"
                   TargetType="ListBoxItem">
                <Setter Property="Template" Value="{StaticResource VsListBoxItemWithoutSelectTemplate}" />
            </Style>

            <Style x:Key="BranchesListBoxStyle"
                   BasedOn="{StaticResource VsListBoxStyle}"
                   TargetType="ListBox">
                <Setter Property="ItemContainerStyle" Value="{StaticResource BranchesListBoxItemStyle}" />
                <Setter Property="ItemTemplate" Value="{StaticResource BranchItemTemplate}" />
                <Setter Property="SelectionMode" Value="Single" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBox">
                            <StackPanel IsItemsHost="True" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel Margin="6,6,6,6">
        <WrapPanel Margin="0,0,0,6"
                   DockPanel.Dock="Top"
                   Orientation="Horizontal">
            <Button Click="Merge" IsEnabled="{Binding ParentSection.MergeEnabled}">Merge</Button>
        </WrapPanel>
        <ListBox ItemsSource="{Binding Path=ParentSection.Branches}" Style="{DynamicResource BranchesListBoxStyle}" />
    </DockPanel>
</UserControl>
